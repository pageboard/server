{
  "name": "pageboard",
  "version": "0.13.0",
  "description": "Website hosting and editing",
  "main": "lib/pageboard.js",
  "scripts": {
    "start": "pageboard",
    "test": "mocha",
    "postinstall": "postinstall"
  },
  "postinstall": {
    "matchdom": "bundle --format=cjs --name=Matchdom lib/matchdom.js"
  },
  "bin": {
    "pageboard": "./bin/pageboard.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pageboard/server.git"
  },
  "author": "Jérémy Lal <kapouer@melix.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pageboard/server/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/pageboard/server#readme",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@pageboard/api": "workspace:*",
    "@pageboard/auth": "workspace:*",
    "@pageboard/cache": "workspace:*",
    "@pageboard/db": "workspace:*",
    "@pageboard/git": "workspace:*",
    "@pageboard/image": "workspace:*",
    "@pageboard/inspector": "workspace:*",
    "@pageboard/mail": "workspace:*",
    "@pageboard/prerender": "workspace:*",
    "@pageboard/statics": "workspace:*",
    "@pageboard/upload": "workspace:*",
    "class-deferred": "^1.0.1",
    "debug": "^4.3.4",
    "dlv": "^1.1.3",
    "express": "^4.18.2",
    "flattie": "^1.1.0",
    "http-errors": "^2.0.0",
    "import-lazy": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "matchdom": "^11.1.0",
    "morgan": "^1.10.0",
    "nestie": "^1.0.3",
    "outdent": "^0.8.0",
    "pad": "^3.2.0",
    "postinstall": "^0.8.0",
    "postinstall-bundle": "^0.8.0",
    "pretty-bytes": "^5.6.0",
    "semver-regex": "^3.1.3",
    "speakingurl": "^14.0.1",
    "toml": "^3.0.0",
    "xdg-basedir": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "@kapouer/eslint-config",
    "globals": {
      "HttpError": true,
      "Text": true,
      "Log": true
    },
    "ignorePatterns": [
      "/*",
      "!/bin",
      "!/packages",
      "!/lib",
      "!/tests",
      "node_modules/"
    ],
    "overrides": [
      {
        "files": [
          "tests/*.test.js"
        ],
        "env": {
          "mocha": true
        },
        "plugins": [
          "mocha"
        ],
        "extends": [
          "plugin:mocha/recommended"
        ],
        "rules": {
          "prefer-arrow-callback": "off",
          "mocha/prefer-arrow-callback": "warn"
        }
      }
    ]
  },
  "mocha": {
    "spec": "tests/*.test.js",
    "ui": "tdd"
  },
  "devDependencies": {
    "@kapouer/eslint-config": "^1.9.1",
    "eslint": "8.35.0",
    "eslint-plugin-mocha": "^10.1.0",
    "mocha": "^10.2.0"
  }
}
