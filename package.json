{
  "name": "pageboard",
  "version": "0.10.0",
  "description": "Website hosting and editing",
  "main": "lib/pageboard.js",
  "scripts": {
    "test": "jest"
  },
  "bin": {
    "pageboard": "./bin/pageboard.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pageboard/server.git"
  },
  "author": "Jérémy Lal <kapouer@melix.org>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pageboard/server/issues"
  },
  "engines": {
    "node": ">=16"
  },
  "homepage": "https://github.com/pageboard/server#readme",
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "@pageboard/api": "workspace:*",
    "@pageboard/auth": "workspace:*",
    "@pageboard/cache": "workspace:*",
    "@pageboard/db": "workspace:*",
    "@pageboard/github-webhook": "workspace:*",
    "@pageboard/image": "workspace:*",
    "@pageboard/inspector": "workspace:*",
    "@pageboard/mail": "workspace:*",
    "@pageboard/pdf": "workspace:*",
    "@pageboard/prerender": "workspace:*",
    "@pageboard/statics": "workspace:*",
    "@pageboard/upload": "workspace:*",
    "class-deferred": "^1.0.1",
    "debug": "^4.3.4",
    "express": "^4.18.1",
    "http-errors": "^2.0.0",
    "import-lazy": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "matchdom": "^5.10.8",
    "morgan": "^1.10.0",
    "outdent": "^0.8.0",
    "pad": "^3.2.0",
    "postinstall": "^0.7.4",
    "pretty-bytes": "^5.6.0",
    "resolve-pkg": "^2.0.0",
    "semver-regex": "^3.1.3",
    "toml": "^3.0.0",
    "xdg-basedir": "^4.0.0"
  },
  "eslintConfig": {
    "extends": "@kapouer/eslint-config",
    "globals": {
      "HttpError": true,
      "Text": true,
      "Log": true
    },
    "ignorePatterns": [
      "/*",
      "!/bin",
      "!/packages",
      "!/lib",
      "!/tests",
      "node_modules/"
    ],
    "overrides": [
      {
        "files": [
          "tests/**/*.test.js"
        ],
        "env": {
          "jest": true
        },
        "plugins": [
          "jest"
        ],
        "extends": [
          "plugin:jest/recommended"
        ]
      }
    ]
  },
  "devDependencies": {
    "@kapouer/eslint-config": "^1.7.5",
    "eslint": "8.17.0",
    "eslint-plugin-jest": "^26.5.3",
    "jest": "^28.1.1"
  }
}
